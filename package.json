{
  "name": "yelpCamp",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "tests": "npx playwright test",
    "prebuild": "rm -rf dist",
    "build": "tsc && cp -r src/views dist/views && cp -r src/public dist/public",
    "dev": "npm-watch restart",
    "start": "npm run down && npm run up:prod",
    "restart": "npm run down && npm run up:dev",
    "up:prod": "docker build -t yelp-camp:latest . && docker run --env-file .env -p 3000:3000 --name yelp-camp yelp-camp:latest",
    "up:dev": "docker build -t yelp-camp:latest . && docker run --env NODE_ENV=development --env-file .env -p 3000:3000 --name yelp-camp yelp-camp:latest",
    "down": "docker rm -f yelp-camp 2>/dev/null",
    "logs": "docker logs -f yelp-camp",
    "seed": "docker exec yelp-camp node dist/seeds/index.js",
    "sync-secrets": "gh secret set -f .env",
    "check-secrets": "gh secret list",
    "logs:secrets": "tail -20 secrets-sync.log",
    "logs:secrets-watch": "tail -f secrets-sync.log"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "ejs": "^3.1.10",
    "ejs-mate": "^4.0.0",
    "express": "^5.1.0",
    "method-override": "^3.0.0",
    "mongoose": "^8.17.0",
    "morgan": "^1.10.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/express": "^5.0.3",
    "@types/method-override": "^3.0.0",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.3.1",
    "dotenv": "^17.2.2",
    "npm-watch": "^0.13.0",
    "typescript": "^5.9.2"
  },
  "watch": {
    "restart": {
      "patterns": [
        "src",
        "tests"
      ],
      "extensions": "ts,js,ejs",
      "quiet": true
    }
  }
}
