<% layout('layouts/boilerplate') %>

<h1>All Campgrounds</h1>
<div class="mb-3 mt-3">
    <a class="btn btn-primary" href="/campgrounds/new">Add New Campground</a>
</div>
<% for (const campground of campgrounds) { %>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <img class="img-fluid" alt="" src="<%= campground.image %>">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= campground.name %></h5>
                    <p class="card-text"><%= campground.description %></p>
                    <p class="card-text"><small class="text-muted">Location: <%= campground.location %></small></p>
                    <p class="card-text">Price: <%= campground.price %></p>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    </div>
<% } %>