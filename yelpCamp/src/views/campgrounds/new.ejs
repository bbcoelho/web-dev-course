<% layout('layouts/boilerplate') %>
    <h1>New Campground</h1>
    <form action="/campgrounds" method="post">
        <div>
            <label for="name">Name</label>
            <input type="text" id="name" name="campground[name]">
        </div>
        <div>
            <label for="price">Price</label>
            <input type="number" id="price" name="campground[price]">
        </div>
        <div>
            <label for="description">Description</label>
            <input type="text" id="description" name="campground[description]">
        </div>
        <div>
            <label for="location">Location</label>
            <input type="text" id="location" name="campground[location]">
        </div>
        <button type="submit">Add Campground</button>
    </form>
    <a href="/campgrounds">All campgrounds</a>
