<% layout('layouts/boilerplate') %>
    <h1>Edit Campground</h1>
    <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="post">
        <div>
            <label for="name">Name</label>
            <input type="text" id="name" name="campground[name]" value="<%= campground.name %>">
        </div>
        <div>
            <label for="price">Price</label>
            <input type="number" id="price" name="campground[price]" value="<%= campground.price %>">
        </div>
        <div>
            <label for="description">Description</label>
            <input type="text" id="description" name="campground[description]" value="<%= campground.description %>">
        </div>
        <div>
            <label for="location">Location</label>
            <input type="text" id="location" name="campground[location]" value="<%= campground.location %>">
        </div>
        <p>
            <button type="submit">Save Changes</button>
        </p>
    </form>
    <a href="/campgrounds/<%= campground._id %>">Back to campground</a>
